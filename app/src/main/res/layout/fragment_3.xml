<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragment3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/gejala_covid_polos"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:background="@color/red">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apakah anda khawatir tentang diri anda?"
            android:textColor="@color/white2"
            android:fontFamily="@font/anton_regular"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anda bisa periksa mandiri COVID-19 disini."
                android:paddingLeft="10dp"/>
            <Button
                android:id="@+id/btn_periksaMandiri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Periksa Mandiri"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
