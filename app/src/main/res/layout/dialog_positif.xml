<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald_bold"
        android:gravity="center"
        android:text="Waspada!"
        android:textColor="@color/design_default_color_primary"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:baselineAligned="false"
            android:text="Anda harus segera pergi ke RS terdekat!"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Berdasarkan gejalanya, semua gejalamu sama seperti gejala COVID-19"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="6dp"
            android:textColor="#82F31E"
            android:textStyle="bold"
            android:text="Lindungi Keluarga Anda"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#82F31E"
            android:textStyle="bold"
            android:text="&amp; Cegah Penyebaran Virusnya"/>
        <Button
            android:id="@+id/btn_dialogPositif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Kembali"
            android:textColor="@color/white2"
            android:background="@drawable/button_gejala"/>
    </LinearLayout>

</LinearLayout>